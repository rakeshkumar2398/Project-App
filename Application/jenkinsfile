pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                git branch: 'main', url: 'https://github.com/rakeshkumar2398/Project-App.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo 'Running Maven build'
                sh 'cd Application && mvn clean package'
            }
        }

        stage('Sonar Scan') {
            steps {
                echo 'Running SonarQube scan'
                sh '''
                    cd Application
                    mvn sonar:sonar \
                      -Dsonar.host.url=http://http://54.237.22.152:9000 \
                      -Dsonar.login=squ_213040d6da058bd20eab0276d98cea9e3fd8595f
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker Image'
                    sh 'cd Application && docker build -t rakesh2398/projecte2e:${BUILD_NUMBER} .'
                }
            }
        }

        stage('Docker Image Scan') {
            steps {
                sh 'trivy image rakesh2398/projecte2e:${BUILD_NUMBER}'
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                        sh 'echo "${dockerhub}" | docker login -u rakesh2398 --password-stdin'
                    }
                    sh 'docker push rakesh2398/projecte2e:${BUILD_NUMBER}'
                }
            }
        }

        stage('Update Kubernetes Deployment Manifest File') {
            environment {
                GIT_REPO_NAME = "Project-App"
                GIT_USER_NAME = "rakeshkumar2398"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "rakesh@gmail.com"
                        git config user.name "rakesh"

                        sed -i "s/projecte2e:.*/projecte2e:${BUILD_NUMBER}/g" Ansible/k8s_deployment.yaml

                        git add .
                        git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

        stage('K8s Deployment using Ansible') {
            steps {
                script {
                    ansiblePlaybook(
                        credentialsId: 'ssh',
                        disableHostKeyChecking: true,
                        installation: 'ansible',
                        inventory: '/etc/ansible/inventory',
                        playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                    )
                }
            }
        }
    }
}
